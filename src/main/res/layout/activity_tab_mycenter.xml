<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main_gray"
    tools:context=".TabMycenterActivity">
    <include
            android:id="@+id/tablayout_mycenter_title"
            layout="@layout/layout_tab_top"
    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/bg_list_whilte"

        >

        <ImageView
            android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/jfqpic" />

        <RelativeLayout
            android:id="@+id/bg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_blur"
            android:orientation="horizontal">

           <!-- <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:background="@color/txt_whilte" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_line"
                android:text="张三"
                android:layout_marginBottom="20dp"
                android:textColor="@color/txt_black"
                android:textSize="17sp" />-->

            <TextView
                android:id="@+id/numberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="17775474113"
                android:textColor="@color/txt_black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                 android:layout_below="@id/numberName"
                android:background="@color/colorBomttom" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:background="@color/colorBomttom" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/withdraw_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/bg_list_whilte"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/withdraw"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/dp_20" />

        <ImageView

            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:paddingLeft="230dp"
            android:paddingTop="8dp"
            android:src="@drawable/rightraw" />

        <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="11dp"

            android:background="#00000000"
            android:src="@drawable/rightraw"
            android:text="退出登录"
            android:textSize="@dimen/dp_20" />-->


    </LinearLayout>




</LinearLayout>